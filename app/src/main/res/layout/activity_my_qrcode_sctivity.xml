<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.cityguestsociety.com.fourthfragmentactivity.MyQRCodeSctivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_gray">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/userCorn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/userAddress"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/userNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/userCorn"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="26dp"
                    android:text="歪猴桑"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/userAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/userCorn"
                    android:layout_below="@+id/userNickName"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="8dp"
                    android:text="北京智慧小区"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_below="@+id/userInfo"
                android:layout_marginTop="15dp"
                android:background="@color/orange">

                <ImageView
                    android:id="@+id/userQRCode"
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_25"
                    android:src="@mipmap/ic_launcher"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userQRCode">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@+id/textView39"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_toLeftOf="@+id/textView39"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="我的ID"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@+id/textView39"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="55dp"
                        android:layout_toRightOf="@+id/textView39"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/userID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView39"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:text="1111111"
                        android:textColor="@color/white"/>
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
