<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="www.cityguestsociety.com.fourthfragmentactivity.SettingActivity">
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/changePassworldRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/balck"
                    android:text="修改密码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:background="@color/black_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"/>
            <RelativeLayout
                android:id="@+id/ClearCacheRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/balck"
                    android:text="清除缓存"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_cacheSize"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:background="@color/black_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/balck"
                    android:text="摇一摇开门"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.kyleduo.switchbutton.SwitchButton
                    style="@style/SwitchButtonMY"
                    android:id="@+id/switchButton"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:background="@color/black_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_loginOut"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"
            android:layout_below="@+id/linearlayout"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"/>
    </RelativeLayout>

</RelativeLayout>
