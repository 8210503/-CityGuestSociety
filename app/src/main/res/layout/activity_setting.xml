<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.cityguestsociety.com.fourthfragmentactivity.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/changePassworldRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="修改密码"
                    android:textColor="@color/balck"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/black_gray"/>

            <RelativeLayout
                android:id="@+id/ClearCacheRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="清除缓存"
                    android:textColor="@color/balck"/>

                <TextView
                    android:id="@+id/tv_cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/black_gray"/>

            <RelativeLayout
                android:id="@+id/blackListrRelative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="黑名单"
                    android:textColor="@color/balck"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/black_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="摇一摇开门"
                    android:textColor="@color/balck"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switchButton"
                    style="@style/SwitchButtonMY"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1"
                android:background="@color/black_gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_loginOut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_below="@+id/linearlayout"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"/>
    </RelativeLayout>

</RelativeLayout>
