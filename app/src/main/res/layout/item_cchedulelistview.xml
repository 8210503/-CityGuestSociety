<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/titlerelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/grayCicle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_circle_logistics_gray"
            />

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/grayCicle"
            android:layout_centerHorizontal="true"
            android:background="#B9B9B9"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_toRightOf="@+id/titlerelativeLayout">

        <TextView
            android:layout_marginRight="@dimen/margin_25"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_18"
            android:text="11111"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_10"
            android:text="2016-17-25"/>

        <TextView
            android:layout_marginRight="50dp"
            android:id="@+id/hengxian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_15"
            android:background="#B9B9B9"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_below="@+id/titlerelativeLayout"
        android:layout_marginLeft="22dp"
        android:background="#B9B9B9"/>

</RelativeLayout>