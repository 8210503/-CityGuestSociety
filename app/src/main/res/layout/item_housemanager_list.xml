<?xml version="1.0" encoding="utf-8"?>
<www.cityguestsociety.com.ui.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:src="@drawable/icon_adress"/>

        <TextView
            android:id="@+id/houseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top_5"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_toRightOf="@+id/imageView5"
            android:text="1111111"
            android:textColor="@color/balck"/>

        <TextView
            android:id="@+id/houseID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/houseAddress"
            android:layout_alignStart="@+id/houseAddress"
            android:layout_below="@+id/imageView5"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="222"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignLeft="@+id/houseAddress"
            android:layout_alignStart="@+id/houseAddress"
            android:layout_below="@+id/houseID"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_top_5"
            android:max="100"
            android:progressDrawable="@drawable/hoorinznalprogressbar"/>

        <TextView
            android:id="@+id/completInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/houseAddress"
            android:layout_alignStart="@+id/houseAddress"
            android:layout_below="@id/progressBar"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
            android:text="完成进度"
            android:textColor="@color/balck"
            />

        <TextView
            android:id="@+id/areadyCompleteInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/progressBar"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:text="已完成60"
            android:textColor="@color/balck"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightImageView"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/red_color_right_corn5"
        android:gravity="center">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white"/>
    </RelativeLayout>
</www.cityguestsociety.com.ui.SwipeMenuView>