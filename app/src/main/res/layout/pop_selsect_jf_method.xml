<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:text="支付方式"
                    android:textColor="@color/balck"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_45">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@mipmap/allpay"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableRight="@drawable/radiobuttoncheckimageview"
                        android:text="支付宝支付"/>

                    <RadioButton
                        android:id="@+id/weixin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@mipmap/wepay"
                        android:drawablePadding="@dimen/margin_10"
                        android:drawableRight="@drawable/radiobuttoncheckimageview"
                        android:text="微信支付"/>
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25">

                <TextView
                    android:id="@+id/cancle"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:background="@drawable/solidline_oringe"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/orange"/>

                <TextView
                    android:layout_marginRight="@dimen/margin_15"
                    android:id="@+id/confirm"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:background="@drawable/all_corners5_orange"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>